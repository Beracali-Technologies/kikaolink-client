
{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@/*": ["*"],
      "@/types": ["types/types.ts"],
      "@/types/*": ["types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/tests/**/*"
  ]
}
